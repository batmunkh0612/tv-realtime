rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to videos folder
    match /videos/{allPaths=**} {
      allow write: if true; // For development - restrict in production!
      allow read: if true;
    }
  }
}

